<!DOCTYPE html>
<html>
  <head>
    <title>ProgrammersParadise</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="header-wrapper">
      <div id="header"><a href="/"><%= image_tag('logo.png', :class => 'logo')%></a>
        <nav id="navigation">
          <ul>
            <li><a href="/forum">Forum</a></li>
            <li><a href="/tutorials">Tutorials</a></li>
            <li><a href="/freelance">Freelance jobs</a></li>
            <li><a href="/community">Community</a></li>
            <li><a href="/jobs">Find job</a></li>
          </ul>
        </nav>
        <div id="account">
          <%= link_to @profile_link do %>
            <%= image_tag(@header_picture, :id => 'account-img', :alt => 'ACC') %>
          <% end %>
        </div>
      </div>
    </header>
    <section id="wrapper">
    <%= yield %>
    </section>
  </body>
</html>
